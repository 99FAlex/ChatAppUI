<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatAppUI.ChatPage"
             Title="ChatPage">
    <Grid BackgroundColor="DarkGray">
        <Label x:Name="TestLabel" Text="This shows incoming messages"></Label>
        <ScrollView Margin="33,40,30,100" BackgroundColor="LightGray">
            <VerticalStackLayout x:Name="MessageStackLayout">
                
            </VerticalStackLayout>

        </ScrollView>

        <Entry x:Name="message" Placeholder="Message" VerticalOptions="End" HeightRequest="20" Margin="30,0,150,30" BackgroundColor="DimGrey" TextColor="AliceBlue"></Entry>

        <Button Clicked="onSend" Text="send" HorizontalOptions="{OnPlatform WinUI=End, Android=Fill}" VerticalOptions="End" Margin="{OnPlatform WinUI=30, Android=5}" />
    </Grid>
</ContentPage>