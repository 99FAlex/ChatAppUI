<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatAppUI.MainPage">
    <Grid MinimumHeightRequest="350">
                                                                                                                                        <!--left top right bottom-->
        <Label x:Name="Error" BackgroundColor="#E98585" HeightRequest="40" WidthRequest="280"  IsVisible="False" VerticalOptions="Center" Margin="0, 0, 0, 290" />
        <!--VerticalOptions="Center"  Grid.Row="13" Grid.Column="4"-->
        <Entry x:Name="Username" Placeholder="Username"  Margin="70,0,70,150" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="50" WidthRequest="200" BackgroundColor="DimGrey"  TextColor="AliceBlue" PlaceholderColor="AliceBlue"/>
        <Button Clicked="onChatPageSwitch" Text="Join" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="50" WidthRequest="200" Margin="{OnPlatform WinUI=30, Android=5}" BackgroundColor="Black"/>
        <Button Clicked="onServerListSwitch" HorizontalOptions="End" VerticalOptions="End" Text="Server" Margin="10" BackgroundColor="Black" />
    </Grid>


</ContentPage>
